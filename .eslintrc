{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": { "es6": true, "node": true },
  "plugins": ["flowtype"],
  "extends": ["eslint:recommended", "plugin:flowtype/recommended"],
  "rules": {
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "no-console": 0
  }
}
